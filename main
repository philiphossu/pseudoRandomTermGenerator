from random import randint
import decimal

def systemGenerator(d):
    #Empty list definition for systems & variables
    masterVarOptions = ["a", "b", "c", "d", "e", "f", "g", "h"]
    system = []
    varList = []
    numTerms = []
    coeffs = []
    #exponents = []
    #Initialize variables list
    for a in range(0,d):
        for b in range(0,d):
            varList.append(masterVarOptions[b]+"_"+str(a))
    #Initialize the number of terms for each equation
    for _ in range(0,d):
        numTerms.append(randint(1,d))
    #Initialize the system list with equation data so far
    for a in range(0,d):
        system.append(newEquation(numTerms[a],varList, [], []))
    #Add d number of coefficients to each equation object
    for a in range(0,d):
        for b in range(0,d):
            system[a].coefficients.append(random.randint(0,100)/random.randint(1,100));


    #Print out number of terms list
    for a in numTerms:
        print(a)
    #Print out variables list
    for a in varList:
        print(a)
    #Print out final system list
    for a in system:
        print(a)
        print(a.terms)
        print(a.variables)
        print(a.coefficients)
        print(a.exponents)
    return

class newEquation(object):
    terms = []
    variables = []
    coefficients = []
    exponents = []
    def __init__(self, terms, variables, coefficients, exponents):
        self.terms = terms
        self.variables = variables
        self.coefficients = coefficients
        self.exponents = exponents
    def out(d):
        #Will ultimately output the equation in string format
        return
